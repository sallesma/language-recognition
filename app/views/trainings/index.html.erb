<p id="notice"><%= notice %></p>

<h1>Listing Trainings</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Language</th>
      <th>Processed ?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.text %></td>
        <td><%= training.language.name %></td>
        <td><%= training.processed %></td>
        <td><%= link_to 'Show', training %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Training', new_training_path %>
