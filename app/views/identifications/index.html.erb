<p id="notice"><%= notice %></p>

<h1>Listing Identifications</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Resulting language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @identifications.each do |identification| %>
      <tr>
        <td><%= identification.text %></td>
        <td><%= identification.language.name %></td>
        <td><%= link_to 'Show', identification %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Identification', new_identification_path %>
