<p id="notice"><%= notice %></p>

<h1>Listing languages</h1>

<table>
  <thead>
    <tr>
      <th>Locale</th>
      <th>Name</th>
      <th>Local Name</th>
      <th>Trainings</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.locale %></td>
        <td><%= language.name %></td>
        <td><%= language.local_name %></td>
        <td><%= language.trainings.count %></td>
        <td><%= link_to 'Show', language %></td>
        <td><%= link_to 'Train', train_language_path(language) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

